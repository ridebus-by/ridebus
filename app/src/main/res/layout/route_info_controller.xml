<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:alpha="0.1"
                android:scaleType="centerCrop"
                android:src="@drawable/backdrop"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,HardcodedText" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/backdrop"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backdrop"
                app:srcCompat="@drawable/ic_favorite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/backdrop"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textColor="?colorAccent"
                    android:textSize="86sp"
                    tools:text="27" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    tools:text="Ж/Д Больница (Новка - Больница (Ксты)" />

            </LinearLayout>

            <TextView
                android:id="@+id/classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="@string/transport_classes"
                android:textAppearance="@style/TextAppearance.Regular"
                app:layout_constraintTop_toBottomOf="@id/backdrop" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/classes"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/small_class"
                    app:chipIcon="@drawable/ic_little_class"
                    app:chipIconEnabled="true"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/middle_class"
                    app:chipIcon="@drawable/ic_big_class"
                    app:chipIconEnabled="true"
                    app:chipIconVisible="true"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/big_class"
                    app:chipIcon="@drawable/ic_big_class"
                    app:chipIconEnabled="true"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/very_big_class"
                    app:chipIcon="@drawable/ic_very_big_class"
                    app:chipIconEnabled="true"
                    tools:ignore="HardcodedText" />

            </com.google.android.material.chip.ChipGroup>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/payment_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/chips"
                app:liv_displayMode="icon"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_balance_wallet"
                app:liv_title="@string/payment_methods"
                tools:liv_subtitle="наличные" />

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/fore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/payment_methods"
                app:liv_displayMode="icon"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_money"
                app:liv_title="@string/fare"
                tools:liv_subtitle="0.55 BYN" />

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/traffic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fore"
                app:liv_displayMode="icon"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_today"
                app:liv_title="@string/traffic"
                tools:liv_subtitle="ежедневно" />

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/traffic"
                app:liv_displayMode="icon"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_time"
                app:liv_title="@string/working_hours"
                tools:liv_subtitle="05:25 - 00:19" />

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:liv_displayMode="icon"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_near_me"
                app:liv_multiline="true"
                app:liv_title="@string/following"
                tools:liv_subtitle="улица Петруся Бровки - улица Максима Богдановича - улица Зыгина - Октябрьская улица - улица Ефросинии Полоцкой - улица Коммунистическая - улица Гоголя - Октябрьская улица - улица Гагарина" />

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/following"
                app:liv_displayMode="icon"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_domain"
                app:liv_multiline="true"
                app:liv_title="@string/carrier_company"
                tools:liv_subtitle="ОАО «Витебскоблавтотранс» (филиал АП №2 г.Полоцка)" />

            <com.lucasurbas.listitemview.ListItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/company"
                app:liv_displayMode="icon"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_build"
                app:liv_multiline="true"
                app:liv_title="@string/technical_information"
                tools:liv_subtitle="Длина маршрута: 11.53 км, остановок: 21" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>