<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:alpha="0.1"
                android:scaleType="centerCrop"
                android:src="@drawable/backdrop"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/backdrop"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backdrop"
                app:srcCompat="@drawable/ic_favorite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/backdrop"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="?colorAccent"
                    android:textSize="86sp"
                    tools:text="27" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    tools:text="Ж/Д Больница (Новка - Больница (Ксты)" />

            </LinearLayout>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/backdrop"
                app:liv_title="Направление"
                app:liv_icon="@drawable/ic_direction"
                app:liv_displayMode="icon"/>

            <TextView
                android:id="@+id/classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/description"
                android:text="Классы транспорта"
                android:textAppearance="@style/TextAppearance.Regular"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/classes">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="малый (12-40)"
                    app:chipIcon="@drawable/ic_little_class"
                    app:chipIconEnabled="true"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="средний (40-70)"
                    app:chipIcon="@drawable/ic_big_class"
                    app:chipIconEnabled="true"
                    app:chipIconVisible="true"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="большой (70-110)"
                    app:chipIcon="@drawable/ic_big_class"
                    app:chipIconEnabled="true"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="очень большой (110+)"
                    app:chipIcon="@drawable/ic_very_big_class"
                    app:chipIconEnabled="true"
                    tools:ignore="HardcodedText" />

            </com.google.android.material.chip.ChipGroup>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/payment_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/chips"
                app:liv_title="Способы оплаты"
                app:liv_subtitle="наличные"
                app:liv_forceKeyline="true"
                app:liv_icon="@drawable/ic_balance_wallet"
                app:liv_displayMode="icon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>