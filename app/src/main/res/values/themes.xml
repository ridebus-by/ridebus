<resources xmlns:tools="http://schemas.android.com/tools">

    <!--============-->
    <!-- Base Theme -->
    <!--============-->

    <!--== Theme base ==-->
    <style name="Base.Theme.RideBus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Disallow 'Force dark theme' -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/ridebus_primary</item>
        <item name="colorOnPrimary">@color/ridebus_onPrimary</item>
        <item name="colorPrimaryContainer">@color/ridebus_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/ridebus_onPrimaryContainer</item>
        <item name="colorSecondary">@color/ridebus_secondary</item>
        <item name="colorOnSecondary">@color/ridebus_onSecondary</item>
        <item name="colorSecondaryContainer">@color/ridebus_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/ridebus_onSecondaryContainer</item>
        <item name="colorTertiary">@color/ridebus_tertiary</item>
        <item name="colorOnTertiary">@color/ridebus_onTertiary</item>
        <item name="colorTertiaryContainer">@color/ridebus_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/ridebus_onTertiaryContainer</item>
        <item name="android:colorBackground">@color/ridebus_background</item>
        <item name="colorOnBackground">@color/ridebus_onBackground</item>
        <item name="colorSurface">@color/ridebus_surface</item>
        <item name="colorOnSurface">@color/ridebus_onSurface</item>
        <item name="colorSurfaceVariant">@color/ridebus_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/ridebus_onSurfaceVariant</item>
        <item name="colorOutline">@color/ridebus_outline</item>
        <item name="colorOnSurfaceInverse">@color/ridebus_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/ridebus_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/ridebus_primaryInverse</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <item name="colorErrorContainer">@color/errorContainer</item>
        <item name="colorOnErrorContainer">@color/onErrorContainer</item>

        <item name="busPrimaryContainer">@color/bus_primaryContainer</item>
        <item name="minibusPrimaryContainer">@color/minibus_primaryContainer</item>
        <item name="expressPrimaryContainer">@color/express_primaryContainer</item>
        <item name="tramPrimaryContainer">@color/tram_primaryContainer</item>
        <item name="busOnPrimaryContainer">@color/bus_onPrimaryContainer</item>
        <item name="minibusOnPrimaryContainer">@color/minibus_onPrimaryContainer</item>
        <item name="expressOnPrimaryContainer">@color/express_onPrimaryContainer</item>
        <item name="tramOnPrimaryContainer">@color/tram_onPrimaryContainer</item>

        <item name="android:divider">@color/divider_default</item>
        <item name="android:listDivider">@drawable/line_divider</item>

        <!-- Ripples -->
        <item name="colorControlHighlight">?attr/colorSurfaceVariant</item>

        <!-- Handles RTL text -->
        <item name="android:textAlignment">gravity</item>
        <item name="android:textDirection">locale</item>

        <!-- Themes -->
        <item name="android:statusBarColor">@color/surface_amoled</item>
        <item name="android:navigationBarColor">@color/surface_amoled</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@null</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="Q">false</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.Widget.Menu</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.RideBus.MaterialAlertDialog</item>
        <item name="textAppearanceButton">@style/TextAppearance.Widget.Button</item>
        <item name="android:buttonStyle">?attr/borderlessButtonStyle</item>
        <item name="android:backgroundDimAmount">0.32</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionOverflowButtonStyle">@style/Theme.RideBus.ActionButton.Overflow</item>
        <item name="actionModeCloseButtonStyle">@style/Theme.RideBus.ActionMode.CloseButton</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.RideBus</item>
        <item name="chipStyle">@style/Widget.RideBus.Chip.Action</item>
        <item name="chipTextColor">?android:attr/textColorPrimary</item>
        <item name="chipBackgroundColor">?android:attr/divider</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="appBarLayoutStyle">@style/Widget.Material3.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar.Surface</item>
        <item name="tabStyle">@style/Widget.RideBus.TabLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.RideBus.BottomNavigationView</item>
        <item name="navigationRailStyle">@style/Widget.RideBus.NavigationRailView</item>
        <item name="switchStyle">@style/Widget.RideBus.Switch</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>

        <!-- Preference text appearance -->
        <item name="android:textAppearanceListItem">?attr/textAppearanceBodyLarge</item>
        <item name="android:textAppearanceListItemSecondary">@style/TextAppearance.RideBus.Preference.Secondary</item>
    </style>

